---
layout: layouts/base.njk
---

{% set featuredPromo = getContentfulArticleSingle %}

{% set notesDeck = getContentfulNotes %}

{% if featuredPromo %}

  <section class="pt-8 pb-14">
    <div class="w-full max-w-7xl mx-auto">
      <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
        <div class="animate-fade-in order-2 lg:order-none">
          <div class="mb-5">
            <span class="bg-huntergreen text-white hover:bg-muted-foreground inline-block rounded-full px-3 py-1 text-xs tracking-widest uppercase"> Featured writing </span>
          </div>
          <a href="/writing/{{ featuredPromo.link.fields.slug }}/" class="no-underline hover:underline underline-offset-2">
            <h1 class="mb-6 font-serif text-4xl leading-tight font-medium md:text-5xl lg:text-6xl">{{ featuredPromo.desktopHeadline }}</h1>
          </a>
          <p class="text-muted-foreground mb-8 max-w-lg text-lg text-balance">{{ featuredPromo.desktopSummary }}</p>
        </div>

        <div class="animate-scale-in relative order-1 lg:order-none">
          <div class="overflow-hidden rounded-lg">
            <a href="/writing/{{ featuredPromo.link.fields.slug }}/" class="">
              <img
                src="{{ featuredPromo.mainImage.url }}"
                alt="{{ featuredPromo.mainImage.alt }}"
                class="w-full aspect-video lg:h-[500px] object-cover transition-transform duration-700 ease-in-out hover:scale-105"
              />
            </a>
          </div>
          {% if featuredPromo.mainImage.photographer %}
          <div class="glass-effect absolute right-4 bottom-4 rounded-md p-3 text-xs">
            Image credit: <span class="font-medium">{{ featuredPromo.mainImage.photographer }}</span>
          </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

{% endif %}


{# Section for Notes, links, and emphemera #}
<section class="py-6 bg-white">
  <div class="w-full max-w-3xl mx-auto">
    <h2 class="font-serif text-3xl font-medium mb-8 text-left">Links, notes, and ephemera</h2>
    
    <div class="grid grid-cols-1 gap-8">
      {% for note in notesDeck %}
        <article class="p-6 border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
          <a href="{{ note.externalLink }}" target="_blank" rel="noopener noreferrer" class="block no-underline hover:underline underline-offset-2">
            <h3 class="font-serif text-xl font-medium mb-2">
              {{ note.noteTitle }}
              <svg xmlns="http://www.w3.org/2000/svg" class="inline-block ml-2 w-4 h-4 text-black" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
            </h3>
          </a>
          {% if note.authorCommentary %}
          <div class="text-foreground text-sm mb-4">
            {{ note.authorCommentary | safe }}
          </div>
          {% endif %}

          {% if note.datePublished %}
          <div class="text-muted-foreground text-xs">
            <span>{{ note.datePublished | readableDate }}</span>
          </div>
          {% endif %}
        </article>
      {% endfor %}
    </div>
    
